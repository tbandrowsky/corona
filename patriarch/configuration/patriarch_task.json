{
  "class_name": "page",
  "page_name": "page_task",
  "using": {
    "page_name": "page_object_edit_template",
    "parameters": {
      "$icon_image_file": "$task_image",
      "$details_contents": [
        {
          "class_name": "edit_field",
          "text": "Description:",
          "json_field_name": "description"
        },
        {
          "class_name": "comboboxex_field",
          "text": "Status:",
          "json_field_name": "status",
          "field": {
            "choices": {
              "id_field": "text",
              "text_field": "text",
              "items": [
                { "text": "open" },
                { "text": "in progress" },
                { "text": "completed" },
                { "text": "on hold" },
                { "text": "cancelled" },
                { "text": "blocked" }
              ]
            }
          }
        },
        "$task_details"
      ]
    }
  }
}
