{
  "class_name": "page",
  "page_name": "page_search",
  "default": true,
  "children": [
    {
      "class_name": "column",
      "box": "full_container",
      "children": [
        {
          "class_name": "row", "name": "search_row",
          "box": { "width": "1.0 container", "height": "50 pixels" },
          "children": [
            {
              "class_name": "chaptersubtitle",
              "name": "search_label_text",
              "box": {
                "width": "100 pixels",
                "height": "40 pixels"
              },
              "padding": "8 pixels",
              "text": "\u220B Find"
            },
            {
              "class_name": "edit",
              "name": "search_input",
              "json_field_name": "full_text",
              "padding": "8 pixels",
              "placholder" : "Search text",
              "box": {
                "width": "300 pixels",
                "height": "60 pixels"
              },
              "text_style": {
                "font_name": "Georgia",
                "font_size": 24
              }
            },
            {
              "class_name": "chaptersubtitle",
              "name": "search_label_text",
              "box": {
                "width": "250 pixels",
                "height": "40 pixels"
              },
              "padding": "8 pixels",
              "text": "\u2208 In"
            },
            {
              "class_name": "command_button",
              "name": "search_all",
              "icon": "ViewAll",
              "text": "everything",
              "box": {
                "width": "100 pixels",
                "height": "1.0 container"
              },
              "on_click": {
                "class_name": "query",
                "form_name": "search_row",
                "table_name": "result_table",
                "detail_frame": "frame_selected",
                "query": {
                  "from": [
                    {
                      "class_name": "patriarch_object",
                      "name": "objects",
                      "filter": {
                        "full_text": "$this.full_text"
                      }
                    }
                  ],
                  "stages": [
                    {
                      "class_name": "result",
                      "source": "objects",
                      "name": "objects"
                    }
                  ]
                }
              }
            },
            {
              "class_name": "command_button",
              "name": "search_contacts",
              "icon": "Contact",
              "text": "contacts",
              "box": {
                "width": "100 pixels",
                "height": "1.0 container"
              },
              "on_click": {
                "class_name": "query",
                "form_name": "search_row",
                "table_name": "result_table",
                "detail_frame": "frame_selected",
                "query": {
                  "from": [
                    {
                      "class_name": "contact",
                      "name": "objects",
                      "filter": {
                        "full_text": "$this.full_text"
                      }
                    }
                  ],
                  "stages": [
                    {
                      "class_name": "result",
                      "source": "objects",
                      "name": "objects"
                    }
                  ]
                }
              }
            },
            {
              "class_name": "command_button",
              "name": "search_family",
              "icon": "Family",
              "text": "family",
              "box": {
                "width": "100 pixels",
                "height": "1.0 container"
              },
              "on_click": {
                "class_name": "query",
                "form_name": "search_row",
                "table_name": "result_table",
                "detail_frame": "frame_selected",
                "query": {
                  "from": [
                    {
                      "class_name": "dependent",
                      "name": "objects",
                      "filter": {
                        "full_text": "$this.full_text"
                      }
                    }
                  ],
                  "stages": [
                    {
                      "class_name": "result",
                      "source": "objects",
                      "name": "objects"
                    }
                  ]
                }
              }
            },
            {
              "class_name": "command_button",
              "name": "search_button",
              "icon": "HomeHouse",
              "text": "property",
              "box": {
                "width": "100 pixels",
                "height": "1.0 container"
              },
              "on_click": {
                "class_name": "query",
                "form_name": "search_row",
                "table_name": "result_table",
                "detail_frame": "frame_selected",
                "query": {
                  "from": [
                    {
                      "class_name": "property",
                      "name": "objects",
                      "filter": {
                        "full_text": "$this.full_text"
                      }
                    }
                  ],
                  "stages": [
                    {
                      "class_name": "result",
                      "source": "objects",
                      "name": "objects"
                    }
                  ]
                }
              }
            },
            {
              "class_name": "command_button",
              "name": "search_button",
              "icon": "CompletedTask",
              "text": "tasks",
              "box": {
                "width": "100 pixels",
                "height": "1.0 container"
              },
              "on_click": {
                "class_name": "query",
                "form_name": "search_row",
                "table_name": "result_table",
                "detail_frame": "frame_selected",
                "query": {
                  "from": [
                    {
                      "class_name": "task_base",
                      "name": "objects",
                      "filter": {
                        "full_text": "$this.full_text"
                      }
                    }
                  ],
                  "stages": [
                    {
                      "class_name": "promote",
                      "source": "objects",
                      "path": "tasks",
                      "name": "get_children"
                    },
                    {
                      "class_name": "result",
                      "source": "get_children",
                      "name": "results"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "class_name": "chaptersubtitle", "name": "search_result",
          "text" :  "",
          "box": { "width": "1.0 container", "height": "16.0 pixels" }
        },
        {
          "class_name": "row", "name": "search_result",
          "box": { "width": "1.0 container", "height": "1.0 remaining" },
          "children": [
            {
              "class_name": "items_view",                       
              "name": "result_table",
              "box": {
                "width": "640 pixels",
                "height": "1.0 container"
              },
              "sources": {
                "ancestor": "card_ancestor",
                "child": "card_child",
                "godparent": "card_godparent",
                "husband": "card_husband",
                "relative": "card_relative",
                "special": "card_special",
                "wife": "card_wife",

                "contact": "card_contact",
                "property": "card_property",      
                "appointment": "card_appointment",
                "promise": "card_promise"
              },
              "empty_text": "No items in list",
              "empty_command": {
                "class_name": "select_frame",
                "target_frame": "page_home.frame_selected",
                "source_frame": "page_empty",
                "message": "layout test."
              },
              "select_command": {
                "class_name": "list_select_object",
                "target_frame": "page_home.frame_selected",
                "table_name": "result_table",
                "sources": {
                  "ancestor": "page_ancestor",
                  "child": "page_child",
                  "godparent": "page_godparent",
                  "husband": "page_husband",
                  "relative": "page_relative",
                  "special": "page_special",
                  "wife": "page_wife",

                  "contact": "page_contact",
                  "property": "page_property",
                  "appointment": "page_appointment",
                  "promise": "page_promise"
                }
              }
            },
            {
              "class_name": "frame",
              "name": "frame_selected",
              "padding": "8 pixels",
              "box": {
                "width": "1.0 remaining",
                "height": "1.0 container"
              }
            }
          ]
        }
      ]
    }
    ]
  }
  