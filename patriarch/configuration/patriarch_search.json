                  "collectible": "page_property_collectible",
                  "building": "page_property_building",

                  "task": "page_task",
                  "appointment": "page_task_appointment",
                  "party": "page_task_party",
                  "project": "page_task_project",
                  "trip": "page_task_trip"

                }
              }
            },
            {
              "class_name": "frame",
              "name": "frame_selected",
              "padding": "8 pixels",
