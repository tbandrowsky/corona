{
  "class_name": "page",
  "page_name": "page_search",
  "default": true,
  "children": [
    {
      "class_name": "column",
      "box": "full_container",
      "children": [
        {
          "class_name": "row", "name": "search_row",
          "box": { "width": "1.0 container", "height": "30 pixels" },
          "children": [
            {
              "class_name": "chaptersubtitle",
              "name": "search_label_text",
              "box": {
                "width": "150 pixels",
                "height": "1.0 container"
              },
              "text": "Search politics:"
            },
            {
              "class_name": "edit",
              "name": "search_input",
              "json_field_name": "full_text",
              "box": {
                "width": "300 pixels",
                "height": "1.0 container"
              }
            },
            {
              "class_name": "chaptersubtitle",
              "name": "search_space",
              "box": {
                "width": "10 pixels",
                "height": "1.0 container"
              }
            },
            {
              "class_name": "push_button",
              "name": "search_button",
              "text": "Search",
              "box": {
                "width": "150 pixels",
                "height": "1.0 container"
              },
              "on_click": {
                "class_name": "query",
                "form_name": "search_row",
                "table_name": "result_table",
                "query": {
                  "from": [
                    {
                      "class_name": "political_object",
                      "name": "objects",
                      "filter": {
                        "full_text": "$this.full_text"
                      }
                    }
                  ],
                  "stages": [
                    {
                      "class_name": "result",
                      "source": "objects",
                      "name": "objects"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "class_name": "chaptersubtitle", "name": "search_result",
          "text" :  "Results",
          "box": { "width": "1.0 container", "height": "50.0 pixels" }
        },
        {
          "class_name": "row", "name": "search_result",
          "box": { "width": "1.0 container", "height": "1.0 remaining" },
          "children": [
            {
              "class_name": "listview",
              "name": "result_table",
              "box": "full_container",
              "table": {
                "columns": [
                  { "label_text": "Type", "json_field_name": "class_name", "width": 150 },
                  { "label_text": "Name", "json_field_name": "full_name", "width": 150 },
                  { "label_text": "City", "json_field_name": "city", "width": 250 },
                  { "label_text": "State", "json_field_name": "state", "width": 50 }
                ]
              }
            }
          ]
        }
      ]
    }
    ]
  }
  