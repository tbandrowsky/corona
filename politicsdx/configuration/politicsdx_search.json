{
  "class_name": "page",
  "page_name": "page_search",
  "default": true,
  "children": [
    {
      "class_name": "column",
      "box": "full_container",
      "children": [
        {
          "class_name": "row", "name": "search_row",
          "box": { "width": "1.0 container", "height": "50 pixels" },
          "children": [
            {
              "class_name": "chaptersubtitle",
              "name": "search_label_text",
              "box": {
                "width": "150 pixels",
                "height": "30 pixels"
              },
              "text": "Search politics:"
            },
            {
              "class_name": "edit",
              "name": "search_input",
              "json_field_name": "full_text",
              "padding" :  "8 pixels",
              "box": {
                "width": "300 pixels",
                "height": "40 pixels"
              }
            },
            {
              "class_name": "chaptersubtitle",
              "name": "search_space",
              "box": {
                "width": "10 pixels",
                "height": "1.0 container"
              }
            },
            {
              "class_name": "command_button",
              "name": "search_button",
              "icon": "Forward",
              "box": {
                "width": "150 pixels",
                "height": "1.0 container"
              },
              "on_click": {
                "class_name": "query",
                "form_name": "search_row",
                "table_name": "result_table",
                "query": {
                  "from": [
                    {
                      "class_name": "political_object",
                      "name": "objects",
                      "filter": {
                        "full_text": "$this.full_text"
                      }
                    }
                  ],
                  "stages": [
                    {
                      "class_name": "result",
                      "source": "objects",
                      "name": "objects"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "class_name": "chaptersubtitle", "name": "search_result",
          "text" :  "",
          "box": { "width": "1.0 container", "height": "16.0 pixels" }
        },
        {
          "class_name": "row", "name": "search_result",
          "box": { "width": "1.0 container", "height": "1.0 remaining" },
          "children": [
            {
              "class_name": "items_view",
              "name": "result_table",
              "box": {
                "width": "0.5 container",
                "height": "1.0 container"
              },
              "sources": {
                "candidate": "card_candidate",
                "donation": "card_donation",
                "committee": "card_committee",
                "committee_transaction": "card_committee_transaction",
                "committee_summary": "card_committee_summary"
              },
              "select_command": {
                "class_name": "list_select_object",
                "target_frame": "page_home.frame_selected",
                "table_name": "result_table",
                "sources": {
                  "candidate": "page_candidate",
                  "donation": "page_donation",
                  "committee": "page_committee",
                  "committee_transaction": "page_committee_transaction",
                  "committee_summary": "page_committee_summary"
                }
              }
            },
            {
              "class_name": "frame",
              "name": "frame_selected",
              "padding": "8 pixels",
              "box": {
                "width": "1.0 remaining",
                "height": "1.0 container"
              }
            }
          ]
        }
      ]
    }
    ]
  }
  